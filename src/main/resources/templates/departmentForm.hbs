{{#partial "content"}}

    <h1>Add a new Department!</h1>

    <form action="/dept/new" method="post">
        <label for="dept-name">Department Name</label>
        <input id="dept-name" name="dept-name" type="text">

        <button type="submit" class="btn btn-default">Add new department</button>
    </form>

    <hr>
    <h1>Department List</h1>
    {{#if departments}}
        {{#each departments}}
            <p>{{name}}</p>
        {{/each}}
    {{else}}
        <p>No Departments</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}