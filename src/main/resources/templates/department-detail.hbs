{{#partial "content"}}
    {{#if department}}
        <h1>{{department.name}}</h1>
        <a href="/dept/{{department.id}}/update" class="btn btn-info">Edit</a>
        <a href="/dept/{{department.id}}/delete" class="btn btn-danger">Delete</a>

        <hr>
    {{else}}
        <h1>Sorry, no such department. <a href="/dept/new">Go here</a> to create it!</h1>
        <hr>
    {{/if}}

    <h1>Sections</h1>
    <div class="list-group">
        {{#if sections}}
            {{#each sections}}
                <a href="/section/{{id}}" class="list-group-item list-group-item-action list-group-item-info">

                    <p><span>{{id}}</span>&nbsp;&nbsp;{{section}}</p>
                </a>
            {{/each}}
        {{else}}
            <h3 class="list-group-item list-group-item-action list-group-item-info">No sections added</h3>
            <hr>
        {{/if}}
    </div>

{{/partial}}

{{> layout.hbs}}