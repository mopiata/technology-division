{{#partial "content"}}

    <h1>Add a new Staff!</h1>

    <form action="/staff/new" method="post">
        <label for="staff-name">Enter Name</label>
        <input id="staff-name" name="staff-name" type="text">

        <label for="staff-number">Enter EK Number</label>
        <input id="staff-number" name="staff-number" type="text">

        <label for="department">Enter Department</label>
<!--        <input id="department" name="department" type="select">-->
        <select name="department" id="department">
            {{#if departments}}
                {{#each departments}}
                        <option value="{{name}}">{{name}}</option>
                {{/each}}
            {{else}}
                    <p>No Departments</p>
            {{/if}}
        </select>

        <label for="section">Enter Section</label>
        <select name="section" id="section">
            {{#if sections}}
                {{#each sections}}
                    <option value="{{section.section}}">{{section.section}}</option>
                {{/each}}
            {{else}}
                <p>No Sections</p>
            {{/if}}
        </select>

        <label for="role">Enter Role</label>
        <input id="role" name="role" type="text">

        <label for="responsibilities">Enter Responsibilities</label>
        <input id="responsibilities" name="responsibilities" type="textarea">

        <button type="submit" class="btn btn-default">Add new staff</button>
    </form>

{{/partial}}

{{> layout.hbs}}