{{#partial "content"}}
    <h3>Add a section</h3>
    {{#if editSection}}
        <form action="/section/{{editSection.id}}/update" method="post">

            <div class="form-group">
                <label for="section">Section Name</label>
                <input class="form-control" id="section" name="section" type="text" value="{{editSection.section}}">
            </div>
    {{else}}
        <form action="/section/new" method="post">
            <div class="form-group">
                <label for="department">Department Name</label>
                <select class="form-control" name="department" id="department">
                    {{#if departments}}
                        {{#each departments}}
                            <option value="{{name}}">{{name}}</option>
                        {{/each}}
                    {{else}}
                        <p>No Sections</p>
                    {{/if}}
                </select>
            </div>
            <div class="form-group">
                <label for="section">Section Name</label>
                <input class="form-control" id="section" name="section" type="text">
            </div>
    {{/if}}

        <button type="submit" class="btn btn-info">Go!</button>
    </form>
        <hr>
{{/partial}}

{{>layout.hbs}}